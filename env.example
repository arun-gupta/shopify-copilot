# Shopify App Builder Copilot Environment Variables

# LLM Provider Configuration
# Choose your AI provider: 'openai', 'ollama', or 'mistral'
REACT_APP_LLM_PROVIDER=ollama

# OpenAI API Configuration
# For development/mock mode (accessible in React frontend)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# For production backend (more secure, not exposed to browser)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (Local AI)
# Base URL for Ollama server (default: http://localhost:11434)
REACT_APP_OLLAMA_BASE_URL=http://localhost:11434

# Mistral AI Configuration
# Mistral API key for cloud-based Mistral models
REACT_APP_MISTRAL_API_KEY=your_mistral_api_key_here

# API Base URL (for production backend)
REACT_APP_API_BASE_URL=http://localhost:3001

# Development Settings
REACT_APP_USE_MOCK_API=true

# Environment Mode
# Set to 'development' for mock API, 'production' for real OpenAI calls
NODE_ENV=development 