# ShopifyGPT Environment Variables

# LLM Provider Configuration
# Choose your AI provider: 'ollama' (default), 'openai', or 'mistral'
REACT_APP_LLM_PROVIDER=ollama

# Ollama Configuration (Local AI - Default for Development)
# Base URL for Ollama server (default: http://localhost:11434)
REACT_APP_OLLAMA_BASE_URL=http://localhost:11434

# Optional: Other AI Providers (for testing different models)
# OpenAI API key (only needed if using OpenAI provider)
# REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Mistral API key (only needed if using Mistral provider)
# REACT_APP_MISTRAL_API_KEY=your_mistral_api_key_here

# API Base URL (for production backend)
REACT_APP_API_BASE_URL=http://localhost:3001

# Development Settings
REACT_APP_USE_MOCK_API=true

# Environment Mode
# Set to 'development' for mock API, 'production' for real AI calls
NODE_ENV=development 